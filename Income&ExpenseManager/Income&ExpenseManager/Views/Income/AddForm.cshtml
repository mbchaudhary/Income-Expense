@model IncomeModel
@using Income_ExpenseManager.BAL;

@{
    ViewData["Title"] = "Add - Income";
}

    <style>
        body {
            background-color: #f8f9fa;
        }

        .form-container {
            /* margin-top: 10px; */
        }

        .btn-custom {
            background-color: #4CAF50;
            color: white;
        }

        .btn-back {
            background-color: #007bff;
            color: white;
        }

        /* Add box-shadow to the form */
        .form-container form {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
    </style>


    <div class="container form-container">
        <!-- Back Button -->
        <div class="mb-3 text-end">
            <a href="javascript:history.back()" class="btn btn-back">Back</a>
        </div>

        <!-- Income Form -->
        <form asp-action="AddForm" method="post" class="shadow p-4 rounded bg-white">
            <input type="hidden" asp-for="IncomeID"/>
            <!-- User ID -->
            <div class="form-group mb-3">
                <label for="UserID">User ID</label>
                <input asp-for="UserID" class="form-control" id="UserID" value="@ViewBag.userid" disabled />
                <input type="hidden" asp-for="UserID" value="@ViewBag.userid" />
                <span asp-validation-for="UserID" class="text-danger"></span>
            </div>

            <!-- Income Amount -->
            <div class="form-group mb-3">
                <label for="IncomeAmount">Income Amount</label>
                <input asp-for="IncomeAmount" class="form-control" id="IncomeAmount" placeholder="Enter income amount" required />
                <span asp-validation-for="IncomeAmount" class="text-danger"></span>
            </div>

            <!-- Income Source -->
            <div class="form-group mb-3">
                <label for="IncomeSource" class="form-label">Income Source</label>
                <select asp-for="IncomeSource" asp-items="@(new SelectList(ViewBag.CategoriesList, "Value", "Text"))" class="form-select" id="IncomeSource" required>
                    <option selected disabled>Select Income Source</option>
                </select>
                <span asp-validation-for="IncomeSource" class="text-danger"></span>
            </div>

            <!-- Income Date -->
            <div class="form-group mb-3">
                <label for="IncomeDate">Income Date</label>
                <input asp-for="IncomeDate" class="form-control" id="IncomeDate" type="date" required />
                <span asp-validation-for="IncomeDate" class="text-danger"></span>
            </div>

            <!-- Notes -->
            <div class="form-group mb-3">
                <label for="Notes">Notes</label>
                <textarea asp-for="Notes" class="form-control" id="Notes" rows="4" placeholder="Additional notes"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <div class="form-group text-center">
                <button type="submit" class="btn btn-custom">Add Income</button>
            </div>
        </form>
    </div>

