@model List<IncomeModel>

@{
    ViewData["Title"] = "Report - Income";
    int index = 1;
}

<!DOCTYPE html>
<html lang="en">
<head runat="server">
    <meta charset="utf-8" />
    <title>Income Table</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f8f9fa;
        }

        .table-container {
            margin-top: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            background-color: #ffffff;
            border-radius: 8px;
            padding: 20px;
        }

        .thead-custom {
            background-color: #007bff;
            color: white;
            text-transform: uppercase;
        }

        .btn-custom {
            background-color: #4CAF50;
            color: white;
        }

            .btn-custom:hover {
                background-color: #45a049;
            }

        .btn-action {
            background-color: #007bff;
            color: white;
        }

            .btn-action:hover {
                background-color: #0056b3;
            }

        .btn-danger:hover {
            background-color: #c82333;
        }
    </style>
</head>
<body>
    <div class="container table-container">
        <div class="mb-3 text-end">
            <a class="btn btn-primary" asp-area="" asp-controller="Income" asp-action="AddForm">
                <i class="bi bi-plus-lg"></i> Add Income
            </a>
        </div>

        <!-- Income Table -->
        <table class="table table-striped table-bordered">
            <thead class="thead-custom">
                <tr>
                    <th>No.</th>
                    <th>Income Amount</th>
                    <th>Income Source</th>
                    <th>Income Date</th>
                    <th>Notes</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (IncomeModel income in Model)
                {
                    <tr>
                        <td>@index</td>
                        <td>@income.IncomeAmount</td>
                        <td>@income.IncomeSource</td>
                        <td>@income.IncomeDate.ToString("yyyy-MM-dd")</td>
                        <td>@income.Notes</td>
                        <td>
                            <!-- Edit Button -->
                            <a class="btn btn-sm btn-action" asp-area="" asp-controller="Income" asp-action="AddForm" asp-route-IncomeId="@income.IncomeID">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>

                            <!-- Delete Button with Confirmation and POST Method -->
                            <form method="post" asp-controller="Income" asp-action="DeleteIncomeData" asp-route-incomeId="@income.IncomeID" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this income record?');">
                                <button type="submit" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                    index++;
                }
            </tbody>
        </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
