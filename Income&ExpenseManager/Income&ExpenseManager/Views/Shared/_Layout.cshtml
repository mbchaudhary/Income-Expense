<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - FinanceApp</title>

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Home" asp-action="Home">
                <i class="bi bi-cash-stack"></i> FinanceApp
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <!-- Income Dropdown -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="incomeDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-wallet"></i> Income
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="incomeDropdown">
                            <li><a class="dropdown-item" asp-controller="Income" asp-action="GetIncomeData"><i class="bi bi-list-ul"></i> Income List</a></li>
                            <li><a class="dropdown-item" asp-controller="Income" asp-action="AddForm"><i class="bi bi-plus-circle"></i> Add Income</a></li>
                        </ul>
                    </li>

                    <!-- Expense Dropdown -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="expenseDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-credit-card"></i> Expense
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="expenseDropdown">
                            <li><a class="dropdown-item" asp-controller="Expense" asp-action="GetExpenseData"><i class="bi bi-list-ul"></i> Expense List</a></li>
                            <li><a class="dropdown-item" asp-controller="Expense" asp-action="AddForm"><i class="bi bi-plus-circle"></i> Add Expense</a></li>
                        </ul>
                    </li>

                    <!-- Categories Dropdown -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="categoriesDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-tags"></i> Categories
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="categoriesDropdown">
                            <li><a class="dropdown-item" asp-controller="Category" asp-action="GetCategoryData"><i class="bi bi-list-ul"></i> Category List</a></li>
                            <li><a class="dropdown-item" asp-controller="Category" asp-action="AddForm"><i class="bi bi-plus-circle"></i> Add Category</a></li>
                        </ul>
                    </li>

                    <!-- Reports Link -->
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Report" asp-action="GetReportData"><i class="bi bi-bar-chart-line"></i> Reports</a>
                    </li>
                </ul>

                <!-- Profile Icon and Logout Button -->
                <div class="ms-auto d-flex align-items-center">
                    <a href="@Url.Action("Login", "LoginAndSignUp")" class="btn btn-danger">
                        <i class="bi bi-box-arrow-right"></i> Logout
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container-fluid mt-3">
        <!-- Header Section -->
        <header class="text-center mb-4">
            <h1 class="text-success">@ViewData["Title"]</h1>
        </header>

        <!-- Main Section -->
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <!-- Scripts Section -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
