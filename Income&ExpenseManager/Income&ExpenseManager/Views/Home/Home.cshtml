<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <style>
        .dashboard-card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background: linear-gradient(90deg, #4e73df, #1cc88a);
            color: white;
            font-size: 1.25rem;
            font-weight: bold;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
        }

        .recent-transactions {
            max-height: 300px;
            overflow-y: auto;
        }

        .table-hover tbody tr:hover {
            background-color: #f8f9fa;
        }

        .btn-custom {
            background-color: #1cc88a;
            color: white;
            font-weight: bold;
        }

            .btn-custom:hover {
                background-color: #17a673;
            }
    </style>
</head>
<body>
    <div class="container my-5">

        <!-- Summary Cards -->
        <div class="row g-4">
            <div class="col-lg-4 col-md-6">
                <div class="card dashboard-card shadow-lg">
                    <div class="card-header text-center">
                        <i class="bi bi-cash-coin fs-3"></i> Total Income
                    </div>
                    <div class="card-body text-center">
                        <h3 class="text-success fw-bold">$5,000</h3>
                        <p class="text-muted">Income this month</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="card dashboard-card shadow-lg">
                    <div class="card-header text-center">
                        <i class="bi bi-wallet2 fs-3"></i> Total Expenses
                    </div>
                    <div class="card-body text-center">
                        <h3 class="text-danger fw-bold">$3,200</h3>
                        <p class="text-muted">Expenses this month</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="card dashboard-card shadow-lg">
                    <div class="card-header text-center">
                        <i class="bi bi-piggy-bank fs-3"></i> Net Savings
                    </div>
                    <div class="card-body text-center">
                        <h3 class="text-primary fw-bold">$1,800</h3>
                        <p class="text-muted">Net savings this month</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Content Section -->
        <div class="row g-4 mt-4">
            <!-- Recent Transactions -->
            <div class="col-lg-8">
                <div class="card dashboard-card shadow-lg">
                    <div class="card-header">
                        <i class="bi bi-clock-history"></i> Recent Transactions
                    </div>
                    <div class="card-body recent-transactions">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Date</th>
                                    <th>Description</th>
                                    <th>Category</th>
                                    <th>Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>12/10/2024</td>
                                    <td>Salary</td>
                                    <td>Income</td>
                                    <td class="text-success">$2,000</td>
                                </tr>
                                <tr>
                                    <td>11/10/2024</td>
                                    <td>Grocery Shopping</td>
                                    <td>Food</td>
                                    <td class="text-danger">-$150</td>
                                </tr>
                                <tr>
                                    <td>10/10/2024</td>
                                    <td>Electricity Bill</td>
                                    <td>Utilities</td>
                                    <td class="text-danger">-$120</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="col-lg-4">
                <div class="card dashboard-card shadow-lg">
                    <div class="card-header text-center">
                        <i class="bi bi-lightning-charge"></i> Quick Actions
                    </div>
                    <div class="card-body">
                        <a asp-area="" asp-controller="Income" asp-action="AddForm" class="btn btn-custom w-100 mb-3">
                            <i class="bi bi-plus-circle"></i> Add Income
                        </a>
                        <a asp-area="" asp-controller="Expense" asp-action="AddForm" class="btn btn-danger w-100 mb-3">
                            <i class="bi bi-dash-circle"></i> Add Expense
                        </a>
                        <a asp-area="" asp-controller="Report" asp-action="GetReportData" class="btn btn-primary w-100">
                            <i class="bi bi-bar-chart-line"></i> View Reports
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
