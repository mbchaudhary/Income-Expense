@{
    ViewData["Title"] = "Report - Expense";
}

<!DOCTYPE html>
<html lang="en">
<head runat="server">
    <meta charset="utf-8" />
    <title>Expense Table</title>
    <!-- Add Bootstrap CDN for styling -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f8f9fa;
        }

        .table-container {
            margin-top: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Add box-shadow here */
            background-color: #ffffff;
            border-radius: 8px; /* Rounded corners for better aesthetics */
            padding: 20px;
        }

        .thead-custom {
            background-color: #007bff; /* Green color for income */
            color: white;
            text-transform: uppercase;
        }

        .btn-custom {
            background-color: #4CAF50;
            color: white;
        }

            .btn-custom:hover {
                background-color: #45a049;
            }

        .btn-action {
            background-color: #007bff;
            color: white;
        }

            .btn-action:hover {
                background-color: #0056b3;
            }

        .btn-danger:hover {
            background-color: #c82333;
        }
    </style>
</head>
<body>
    <div class="container table-container">

        <div class="mb-3 text-end">
            <a class="btn btn-primary" asp-area="" asp-controller="Expense" asp-action="AddForm">
                <i class="bi bi-plus-lg"></i> Add Expense
            </a>
        </div>

        <!-- Expense Table -->
        <table class="table table-striped table-bordered">
            <thead class="thead-custom">
                <tr>
                    <th>No</th>
                    <th>Expense Amount</th>
                    <th>Expense Category</th>
                    <th>Expense Date</th>
                    <th>Notes</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <!-- Row 1 -->
                <tr>
                    <td>1</td>
                    <td>$500</td>
                    <td>Rent</td>
                    <td>2024-12-01</td>
                    <td>Office rent payment</td>
                    <td>
                        <button class="btn btn-sm btn-action">
                            <i class="bi bi-pencil-square"></i> Edit
                        </button>
                        <button class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                    </td>
                </tr>

                <!-- Row 2 -->
                <tr>
                    <td>2</td>
                    <td>$200</td>
                    <td>Utilities</td>
                    <td>2024-12-05</td>
                    <td>Electricity bill payment</td>
                    <td>
                        <button class="btn btn-sm btn-action">
                            <i class="bi bi-pencil-square"></i> Edit
                        </button>
                        <button class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                    </td>
                </tr>

                <!-- Add more rows as needed -->
            </tbody>
        </table>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
