@model ExpenseModel
@using Income_ExpenseManager.BAL;

@{
    ViewData["Title"] = "Add - Expense";
}


<style>
        body {
            background-color: #f8f9fa;
        }

        .btn-custom {
            background-color: #4CAF50;
            color: white;
        }

        .btn-back {
            background-color: #007bff;
            color: white;
        }

        .form-container form {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
    </style>


    <div class="container form-container">

        <!-- Back Button -->
        <div class="mb-3 text-end">
            <a href="javascript:history.back()" class="btn btn-back">Back</a>
        </div>

        <form asp-action="AddForm" method="post" class="shadow p-4 rounded bg-white">
            <input type="hidden" asp-for="ExpenseId" />

            <div class="form-group mb-3">
                <label for="UserId">User ID</label>
                <input asp-for="UserId" class="form-control" id="UserId" value="@ViewBag.UserId" disabled />
                <input type="hidden" asp-for="UserId" value="@ViewBag.UserId" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label for="ExpenseAmount">Expense Amount</label>
                <input asp-for="ExpenseAmount" class="form-control" id="ExpenseAmount" placeholder="Enter expense amount" required />
                <span asp-validation-for="ExpenseAmount" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label for="ExpenseCategory" class="form-label">Expense Category</label>
                <select asp-for="ExpenseCategory" asp-items="@(new SelectList(ViewBag.CategoriesList, "Value", "Text"))" class="form-select" id="ExpenseCategory" required>
                    <option selected disabled>Select Expense Category</option>
                </select>
                <span asp-validation-for="ExpenseCategory" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label for="ExpenseDate">Expense Date</label>
                <input asp-for="ExpenseDate" class="form-control" id="ExpenseDate" type="date" required />
                <span asp-validation-for="ExpenseDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label for="Notes">Notes</label>
                <textarea asp-for="Notes" class="form-control" id="Notes" rows="4" placeholder="Additional notes"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>

            <div class="form-group text-center">
                <button type="submit" class="btn btn-custom">Add Expense</button>
            </div>
        </form>
    </div>


