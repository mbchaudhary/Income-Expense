@{
    ViewData["Title"] = "Report - Categories";
}

<!DOCTYPE html>
<html lang="en">
<head runat="server">
    <meta charset="utf-8" />
    <title>Category Table</title>
    <!-- Add Bootstrap CDN for styling -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f8f9fa;
        }

        .table-container {
            margin-top: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            background-color: #ffffff;
            border-radius: 8px;
            padding: 20px;
        }

        .btn-action {
            background-color: #007bff;
            color: white;
        }

            .btn-action:hover {
                background-color: #0056b3;
            }

        .btn-danger:hover {
            background-color: #d9534f;
        }

        .thead-custom th {
            background-color: #007bff;
            color: #ffffff;
            text-transform: uppercase;
        }
    </style>
</head>
<body>
    <div class="container table-container">
        <div class="mb-3 text-end">
            <a class="btn btn-primary" asp-area="" asp-controller="Category" asp-action="AddForm"><i class="bi bi-plus-lg"></i> Add Category</a>
        </div>

        <!-- Category Table -->
        <table class="table table-striped table-bordered shadow-sm">
            <thead class="thead-custom">
                <tr>
                    <th>No</th>
                    <th>Category Name</th>
                    <th>Category Type</th>
                    <th>User ID</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <!-- Row 1 -->
                <tr>
                    <td>1</td>
                    <td>Rent</td>
                    <td><span class="badge bg-danger">Expense</span></td>
                    <td>101</td>
                    <td>
                        <button class="btn btn-sm btn-action"><i class="bi bi-pencil-square"></i> Edit</button>
                        <button class="btn btn-sm btn-danger"><i class="bi bi-trash"></i> Delete</button>
                    </td>
                </tr>

                <!-- Row 2 -->
                <tr>
                    <td>2</td>
                    <td>Salary</td>
                    <td><span class="badge bg-success">Income</span></td>
                    <td>102</td>
                    <td>
                        <button class="btn btn-sm btn-action"><i class="bi bi-pencil-square"></i> Edit</button>
                        <button class="btn btn-sm btn-danger"><i class="bi bi-trash"></i> Delete</button>
                    </td>
                </tr>

                <!-- Add more rows dynamically based on categories -->
            </tbody>
        </table>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
