@{
    ViewData["Title"] = "Add - Category";
}

<!DOCTYPE html>
<html lang="en">
<head runat="server">
    <meta charset="utf-8" />
    <title>Add Category</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f8f9fa;
        }

        .form-container {
            margin-top: 1px;
        }

        .btn-custom {
            background-color: #4CAF50;
            color: white;
        }

        .btn-back {
            background-color: #007bff;
            color: white;
        }

        .form-container .shadow {
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>
<body>
    <div class="container form-container">
        <!-- Back Button -->
        @* <div class="mb-3 text-end">
            <a href="javascript:history.back()" class="btn btn-back">Back</a>
        </div> *@

        <!-- Category Form -->
        <form id="categoryForm" class="shadow p-4 rounded bg-white">

            <div class="form-group mb-3">
                <label for="categoryName">Category Name</label>
                <input type="text" class="form-control" id="categoryName" placeholder="Enter Category Name" required />
            </div>

            <div class="form-group mb-3">
                <label for="categoryType">Category Type</label>
                <select class="form-control" id="categoryType" required>
                    <option value="" disabled selected>Select a type</option>
                    <option value="Income">Income</option>
                    <option value="Expense">Expense</option>
                </select>
            </div>

            <div class="form-group mb-3">
                <label for="userId">User ID</label>
                <input type="number" class="form-control" id="userId" placeholder="Enter User ID (Optional)" />
            </div>

            <div class="form-group text-center">
                <button type="submit" class="btn btn-custom">Add Category</button>
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
