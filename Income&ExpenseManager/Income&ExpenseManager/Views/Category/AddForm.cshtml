@model CategoriesModel
@using Income_ExpenseManager.BAL;

@{
    ViewData["Title"] = "Add - Category";
}


    <style>
        body {
            background-color: #f8f9fa;
        }

        .form-container {
            margin-top: 20px;
        }

        .btn-custom {
            background-color: #4CAF50;
            color: white;
        }

        .btn-back {
            background-color: #007bff;
            color: white;
        }

        .form-container form {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
    </style>

    <div class="container form-container">

        <!-- Back Button -->
        <div class="mb-3 text-end">
            <a href="javascript:history.back()" class="btn btn-back">Back</a>
        </div>

        <form asp-action="AddForm" asp-controller="Category" method="post" class="shadow p-4 rounded bg-white">
            <input type="hidden" asp-for="CategoryId" />

            <!-- User ID Field (Same as Expense Form) -->
            <div class="form-group mb-3">
                <label for="UserId">User ID</label>
                <input asp-for="UserId" class="form-control" id="UserId" value="@ViewBag.UserId" disabled />
                <input type="hidden" asp-for="UserId" value="@ViewBag.UserId" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label for="CategoryName">Category Name</label>
                <input asp-for="CategoryName" class="form-control" id="CategoryName" placeholder="Enter Category Name" required />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label for="CategoryType">Category Type</label>
                <select asp-for="CategoryType" class="form-control" id="CategoryType" required>
                    <option value="" disabled selected>Select a type</option>
                    <option value="Income">Income</option>
                    <option value="Expense">Expense</option>
                </select>
                <span asp-validation-for="CategoryType" class="text-danger"></span>
            </div>

            <div class="form-group text-center">
                <button type="submit" class="btn btn-custom">Add Category</button>
            </div>
        </form>
    </div>

